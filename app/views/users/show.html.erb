<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
    	<h4>
    		Paypal Balance: <%= @user.paypal_balance %>
    	</h4>
    	<h4>
    		Bitcoin Balance: <%= @user.bitcoin_balance %>
    	</h4>
    </section>
    <section>
      <h2>Trades:</h2>
      <div class="col-md-8">
        <% if @user.trades.any? %>
          <h3>Trades (<%= @user.trades.count %>)</h3>
          <ol class="trades">
            <%= render @trades %>
          </ol>
          <%= will_paginate @trades %>
        <% end %>
      </div>
    </section>
  </aside>
</div>